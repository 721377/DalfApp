<!-- Modify this file to customize your launch splash screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1C304C"  <!-- Dark blue -->
                android:endColor="#0A1A2F"   <!-- Darker blue -->
                android:angle="45" />        <!-- Gradient angle -->
        </shape>
    </item>

    <!-- Centered Logo -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />  <!-- Replace with your logo -->
    </item>

